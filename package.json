{
  "name": "world-time-api",
  "version": "1.0.0",
  "description": "A World Time API clone built with Fastify and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:download": "ts-node tests/scripts/download_test_data.ts"
  },
  "keywords": [
    "fastify",
    "typescript",
    "world-time-api",
    "timezone"
  ],
  "author": "Sleeyax",
  "license": "",
  "type": "commonjs",
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "fastify": "^5.4.0",
    "geolite2-redist": "^3.1.1",
    "maxmind": "^4.3.28",
    "timezonecomplete": "^5.14.1",
    "tzdata": "^1.0.44"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
