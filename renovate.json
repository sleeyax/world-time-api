{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "schedule": ["on the first day of the month"],
  "packageRules": [
    {
      "matchPackageNames": ["tzdata"],
      "groupName": "timezone-data",
      "automerge": true,
      "automergeType": "branch",
      "schedule": ["before 1am"]
    },
    {
      "matchPackageNames": [
        "@cloudflare/workers-types",
        "cloudflare",
        "wrangler"
      ],
      "groupName": "cloudflare"
    },
    {
      "matchPackageNames": ["@types/unzipper", "unzipper"],
      "groupName": "unzipper"
    }
  ]
}
